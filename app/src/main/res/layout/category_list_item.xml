<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="20dp"
            android:id="@+id/iv_cat_images"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_cat_images"
            android:layout_toEndOf="@+id/iv_cat_images"
            android:paddingTop="35dp"
            android:textSize="20dp"

            android:id="@+id/tv_cat_rv_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cat_subname"
            android:textSize="15dp"
            android:layout_below="@+id/tv_cat_rv_list"
            android:layout_toEndOf="@+id/iv_cat_images"
            android:layout_toRightOf="@+id/iv_cat_images"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/iv_cat_images"
        android:background="@color/defaultColor"/>
    
</RelativeLayout>

